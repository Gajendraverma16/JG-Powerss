      }
    } catch (err) {
      await loadingAlert.close();
      // Revert UI on error
      setPermissions((prev) => ({
        ...prev,
        [module]: {
          ...prev[module],
          [permission]: permissions[module][permission],
        },
      }));
      Swal.fire({
