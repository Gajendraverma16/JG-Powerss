            successfulAssignments.push(leadId);
          } else {
            failedAssignments.push({
              id: leadId,
              reason: response.data.message || "Unknown error",
            });
          }
        } catch (err) {
          failedAssignments.push({
            id: leadId,
            reason: err.message || "Network error",
          });
