                      <div className="flex justify-between items-center pl-4">
                        <span>
                          CGST ({halfTaxRate.toFixed(2)}%):{" "}
                          {baseAmount.toFixed(2)} x {halfTaxRate.toFixed(2)}%
                        </span>
                        <span className="font-medium">
                          = {item.cgstAmount.toFixed(2)}
                        </span>
                      </div>
                      <div className="flex justify-between items-center pl-4">
                        <span>
                          SGST ({halfTaxRate.toFixed(2)}%):{" "}
                          {baseAmount.toFixed(2)} x {halfTaxRate.toFixed(2)}%
                        </span>
